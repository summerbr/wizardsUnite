<html>
<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css">
</head>

<body>
  <div class="container">
    <div class="row"><h1>Add Friend</h1>
      <div class="six columns">
      <form method="POST" action="/add-friend">
        <label>Friend Name</label>
          <input class="u-full-width" type="text" name="friendName" placeholder="Enter username" value={{friendName}}>
        <label>Friend Code</label>
          <input class="u-full-width" type="text" name="friendCode" placeholder="Enter user code" value={{friendCode}}>
        <button class="button button-primary">Add Friend</button>
      </form>
      </div>
    </div>
  </div>
</body>
{{> footer}}
</html>