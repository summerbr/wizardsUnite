    <div class="row"><h1>Register</h1>
      <form method="POST" action="/user/update">
        <div class="six columns">
          <label>House</label>
            <input class="u-full-width" type="text" name="house" placeholder="Enter your Hogwarts House" value={{house}}>
          </div>
        <div class="six columns">
          <label>Location</label>
            <input class="u-full-width" type="text" name="location" placeholder="Enter your location" value={{location}}>
          </div>
        <div class="six columns">
          <label>Gift Preference 1</label>
            <select class="u-full-width" type="text" name="giftPref1" value={{giftPref1}} id="">
              <option value="energy">Spell Energy</option>
              <option value="runestone">Runestones</option>
              <option value="ingredient">Ingredients</option>
              <option value="any">ANY-I'm not picky!</option>
            </select>
          </div>
        <div class="six columns">
          <label>Gift Preference 2</label>
            <select class="u-full-width" type="text" name="giftPref2" value={{giftPref2}} id="">
              <option value="runestone">Runestones</option>
              <option value="ingredient">Ingredients</option>
              <option value="energy">Spell Energy</option>
              <option value="any">Just Gimme stuff!</option>
            </select>
          </div>  
          <button class="button button-primary">Submit</button>
        </div>
      </form>